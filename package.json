{
  "name": "chatkin-os",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered productivity suite - Personal task management, notes, and intelligent chat assistance",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:worker": "pnpm --filter worker dev",
    "build:web": "pnpm --filter web build",
    "build:worker": "pnpm --filter worker build",
    "deploy:web": "pnpm --filter web run deploy",
    "deploy:worker": "pnpm --filter worker run deploy",
    "test": "pnpm --filter \"./apps/**\" test",
    "test:web": "pnpm --filter web test",
    "test:worker": "pnpm --filter worker test",
    "test:ui": "pnpm --filter \"./apps/**\" test:ui",
    "test:coverage": "pnpm --filter \"./apps/**\" test:coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,svelte}\"",
    "typecheck": "pnpm --filter \"./apps/**\" --filter \"./packages/**\" typecheck"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.9",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/ui": "^4.0.14",
    "eslint": "^9.39.1",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte-eslint-parser": "^1.4.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.1",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@supabase/supabase-js": "^2.86.0",
    "dotenv": "^17.2.3"
  }
}